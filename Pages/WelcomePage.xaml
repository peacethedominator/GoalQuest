<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoalQuest.WelcomePage"
             Title="Greetings!">

    <!-- Background Gradient -->
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#FFB677" Offset="0.0"/>
            <GradientStop Color="#FF3CAC" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="CenterAndExpand">

        <!-- Profile Picture Frame -->
        <Frame Padding="5" CornerRadius="50"
               BackgroundColor="White"
               HasShadow="True"
               WidthRequest="110" HeightRequest="110"
               BorderColor="Black"
               VerticalOptions="Center"
               HorizontalOptions="Center">
            <Image x:Name="ProfileImage"
                   WidthRequest="110"
                   HeightRequest="110"
                   Aspect="AspectFill"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Welcome Label -->
        <Label x:Name="WelcomeLabel"
               FontSize="32"
               FontAttributes="Bold"
               FontFamily="Arial"
               TextColor="White"
               HorizontalOptions="Center"/>

        <!-- Motivational Quote -->
        <Label x:Name="MotivationLabel"
               FontSize="22"
               FontAttributes="Italic"
               FontFamily="serif"
               TextColor="Black"
               Opacity="0.8"
               HorizontalOptions="Center"/>

        <!-- Animated Button -->
        <Button Text="Let's Begin!"
                FontAttributes="Bold"
                FontSize="22"
                BackgroundColor="#272D2D"
                TextColor="White"
                CornerRadius="15"
                Padding="15"
                WidthRequest="200"
                HorizontalOptions="Center"
                Clicked="GoToHome_Clicked">
            <Button.Triggers>
                <Trigger TargetType="Button" Property="IsPressed" Value="True">
                    <Setter Property="Scale" Value="0.95"/>
                </Trigger>
            </Button.Triggers>
        </Button>

    </VerticalStackLayout>

</ContentPage>
